{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="h2 fw-bold mb-2">
            <i class="bi bi-box-seam me-2 text-primary"></i>Tous les articles
        </h1>
        <p class="text-muted mb-0">Gérez votre catalogue d'articles</p>
    </div>
    <a href="{{ path('add_article') }}" class="btn btn-primary btn-modern">
        <i class="bi bi-plus-circle me-2"></i>Ajouter un article
    </a>
</div>

{% if articles is empty %}
    <div class="glass-card p-5 text-center">
        <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
        <h3 class="mt-3 mb-2">Aucun article</h3>
        <p class="text-muted mb-4">Commencez par ajouter votre premier article</p>
        <a href="{{ path('add_article') }}" class="btn btn-primary btn-modern">
            <i class="bi bi-plus-circle me-2"></i>Ajouter un article
        </a>
    </div>
{% else %}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        {% for article in articles|reverse %}
            <div class="col">
                <div class="card card-modern h-100">
                    <div class="position-relative overflow-hidden" style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        {% if article.imageUrl %}
                            <img src="{{ article.imageUrl }}" 
                                 class="w-100 h-100" 
                                 alt="{{ article.libelle }}" 
                                 style="object-fit: cover; transition: transform 0.5s ease;">
                        {% else %}
                            <div class="d-flex align-items-center justify-content-center h-100 text-white">
                                <i class="bi bi-image" style="font-size: 3rem; opacity: 0.5;"></i>
                            </div>
                        {% endif %}
                        <div class="position-absolute top-0 end-0 m-3">
                            {% if article.disponile %}
                                <span class="badge badge-modern bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Disponible
                                </span>
                            {% else %}
                                <span class="badge badge-modern bg-danger">
                                    <i class="bi bi-x-circle me-1"></i>Indisponible
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <h5 class="card-title fw-bold mb-1">{{ article.libelle }}</h5>
                            <small class="text-muted">#{{ article.id }}</small>
                        </div>

                        <div class="mb-3 flex-grow-1">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-tag text-primary me-2"></i>
                                <span class="small"><strong>Marque:</strong> {{ article.marque }}</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-currency-euro text-success me-2"></i>
                                <span class="small"><strong>Prix:</strong> {{ article.price }} €</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-tags text-info me-2"></i>
                                <span class="small">
                                    <strong>Catégorie:</strong>
                                    {% if article.categorie %}
                                        <span class="badge bg-info text-dark ms-1">{{ article.categorie.nomCategorie }}</span>
                                    {% else %}
                                        <span class="text-muted ms-1">Aucune</span>
                                    {% endif %}
                                </span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-auto">
                            <a href="{{ path('edit_user', {'id': article.id }) }}" 
                               class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="bi bi-pencil me-1"></i>Modifier
                            </a>
                            <button type="button" 
                                    class="btn btn-sm btn-outline-danger flex-fill"
                                    onclick="confirmDelete({{ article.id }}, '{{ article.libelle|e('js') }}')">
                                <i class="bi bi-trash me-1"></i>Supprimer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}

{# Delete Confirmation Modal #}
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-card border-0">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>Confirmer la suppression
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer l'article <strong id="articleName"></strong> ?</p>
                <p class="text-muted small mb-0">Cette action est irréversible.</p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary btn-modern" data-bs-dismiss="modal">Annuler</button>
                <a href="#" id="confirmDeleteBtn" class="btn btn-danger btn-modern">
                    <i class="bi bi-trash me-2"></i>Supprimer
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(id, name) {
        document.getElementById('articleName').textContent = name;
        document.getElementById('confirmDeleteBtn').href = '{{ path('cand_delete', {'id': '__ID__'}) }}'.replace('__ID__', id);
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>
{% endblock %}
